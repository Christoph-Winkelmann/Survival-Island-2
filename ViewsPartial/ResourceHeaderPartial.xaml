<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="survival_island_2.ViewsPartial.ResourceHeaderPartial">

  <Grid
  ColumnDefinitions="*, *, *, *, auto"
  RowDefinitions="auto"
  ColumnSpacing="10">
    <HorizontalStackLayout
    Spacing="5">
      <Label
      Text="Logs:"/>
      <Label
      Text="{Binding ResourcesInventory.LogsCount}"/>
    </HorizontalStackLayout>
    <HorizontalStackLayout
    Grid.Column="1"
    Spacing="5">
      <Label
      Text="Sticks:"/>
      <Label
      Text="{Binding ResourcesInventory.SticksCount}"/>
    </HorizontalStackLayout>
    <HorizontalStackLayout
    Grid.Column="2"
    Spacing="5">
      <Label
      Text="Fibers:"/>
      <Label
      Text="{Binding ResourcesInventory.FibersCount}"/>
    </HorizontalStackLayout>
    <HorizontalStackLayout
    Grid.Column="3"
    Spacing="5">
      <Label
      Text="Stones:"/>
      <Label
      Text="{Binding ResourcesInventory.StonesCount}"/>
    </HorizontalStackLayout>
    <HorizontalStackLayout
    Grid.Column="4"
    Spacing="5">
      <Label
      Text="Food"/>
      <Label
      Text="{Binding ResourcesInventory.FoodCount}"/>
    </HorizontalStackLayout>
  </Grid>
</ContentView>
