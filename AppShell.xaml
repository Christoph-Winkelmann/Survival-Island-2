<?xml version="1.0" encoding="UTF-8" ?>
<Shell
  x:Class="survival_island_2.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:view="clr-namespace:survival_island_2.Views"
  Shell.FlyoutBehavior="Disabled"
  Shell.NavBarIsVisible="False"
  Title="Survival Island 2">

  <ShellContent
    Shell.NavBarIsVisible="False"
    Title="Main Menu"
    ContentTemplate="{DataTemplate view:MainMenuView}"
    Route="MainMenu"/>
  <ShellContent
    Title="Credits"
    ContentTemplate="{DataTemplate view:CreditsView}"
    Route="Credits"/>
  <ShellContent
    Title="New Game"
    ContentTemplate="{DataTemplate view:NewGameView}"
    Route="NewGame"/>
  <ShellContent
    Title="Main Game"
    ContentTemplate="{DataTemplate view:MainGameView}"
    Route="MainGame"/>
  <ShellContent
    Title="Settings"
    ContentTemplate="{DataTemplate view:SettingsView}"
    Route="Settings"/>
  <ShellContent
    Title="Crafting"
    ContentTemplate="{DataTemplate view:CraftingView}"
    Route="Crafting"/>
  <ShellContent
    Title="Status"
    ContentTemplate="{DataTemplate view:StatusView}"
    Route="Status"/>
  <ShellContent
    Title="End Screen"
    ContentTemplate="{DataTemplate view:EndScreenView}"
    Route="EndScreen"/>
</Shell>
