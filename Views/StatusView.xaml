<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:survival_island_2.ViewModels"
             x:DataType="viewmodel:StatusViewModel"
             x:Class="survival_island_2.Views.StatusView"
             Title="{Binding Title}">

    <ScrollView
      MaximumWidthRequest="640"
      VerticalScrollBarVisibility="Never">
        <VerticalStackLayout
            Margin="10"
            Spacing="20">
            <Label
                Text="{Binding Title}"
                Style="{StaticResource Headline}"/>
            <Border
                Padding="7">
                <VerticalStackLayout
                    Spacing="10">
                    <Label
                        Text="Player Stats"
                        Style="{StaticResource SubHeadline}"/>
                    <Label
                        Text="Placeholder"/>
                </VerticalStackLayout>
            </Border>
            <Border
                Padding="7">
                <VerticalStackLayout
                    Spacing="10">
                    <Label
                        Text="Inventory"
                        Style="{StaticResource SubHeadline}"/>
                    <Label
                        Text="Placeholder"/>
                </VerticalStackLayout>
            </Border>
            <Border
                Padding="7">
                <VerticalStackLayout
                    Spacing="10">
                    <Label
                        Text="Crafting Summary"
                        Style="{StaticResource SubHeadline}"/>
                    <Label
                        Text="Placeholder"/>
                </VerticalStackLayout>
            </Border>
            <Button
                Text="Back"
                Command="{Binding GoToMainGameViewCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>