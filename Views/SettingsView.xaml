<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:survival_island_2.ViewModels"
             x:DataType="viewmodel:SettingsViewModel"
             x:Class="survival_island_2.Views.SettingsView"
             Title="SettingsView">
    <Grid
        RowDefinitions="auto, auto, auto"
        RowSpacing="20"
        Margin="10">
        <Label
            Text="{Binding Title}"
            Grid.Row="0"
            Style="{StaticResource Headline}"/>
        <VerticalStackLayout
            Grid.Row="1"
            Spacing="7">
            <Button
                Text="Save Game"/>
            <Button
                Text="Load Game"/>
            <Button
                Text="Back to Main Menu"
                Command="{Binding GoToMainMenuCommand}"/>
            <Button
                Text="Exit to Desktop"
                Command="{Binding ExitToDesktopCommand}"/>
        </VerticalStackLayout>
        <Button
            Text="Continue Game"
            Grid.Row="2"
            Command="{Binding GoToMainGameViewCommand}"/>
    </Grid>
</ContentPage>