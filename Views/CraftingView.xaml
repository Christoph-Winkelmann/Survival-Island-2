<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:survival_island_2.ViewModels"
             xmlns:model="clr-namespace:survival_island_2.Models"
             x:DataType="viewmodel:CraftingViewModel"
             x:Class="survival_island_2.Views.CraftingView"
             Title="CraftingView">
  <ScrollView
    MaximumWidthRequest="640"
    VerticalScrollBarVisibility="Never">
    <Grid
      RowDefinitions="auto, auto, *, auto"
      Margin="10"
      RowSpacing="20">
      <Label
        Text="{Binding Title}"
        Style="{StaticResource Headline}"
        Grid.Row="0"/>
      <Grid
        Grid.Row="1"
        ColumnDefinitions="*, *, *, *, auto">
        <HorizontalStackLayout
          Grid.Column="0"
          Spacing="5">
          <Label
            Text="Logs: "/>
          <Label
            Text="{Binding ResourcesInventory.LogsCount}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
          Grid.Column="1"
          Spacing="5">
          <Label
            Text="Sticks: "/>
          <Label
            Text="{Binding ResourcesInventory.SticksCount}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
          Grid.Column="2"
          Spacing="5">
          <Label
            Text="Fibers: "/>
          <Label
            Text="{Binding ResourcesInventory.FibersCount}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
          Grid.Column="3"
          Spacing="5">
          <Label
            Text="Stones: "/>
          <Label
            Text="{Binding ResourcesInventory.StonesCount}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
          Grid.Column="4"
          Spacing="5">
          <Label
            Text="Food: "/>
          <Label
            Text="{Binding ResourcesInventory.FoodCount}"/>
        </HorizontalStackLayout>
      </Grid>

      <Grid
        Grid.Row="2"
        ColumnDefinitions="213, *"
        RowDefinitions="*"
        ColumnSpacing="10">
        <ScrollView>
          <Border
            Padding="7">
            <CollectionView
              ItemsSource="{Binding CraftableList}">
              <CollectionView.ItemsLayout>
                <LinearItemsLayout 
                  Orientation="Vertical"
                  ItemSpacing="7"/>
              </CollectionView.ItemsLayout>
              <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Craftable">
                  <Grid>
                    <Grid.GestureRecognizers>
                      <TapGestureRecognizer
                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:CraftingViewModel}}, Path=SelectCraftableCommand}"
                        CommandParameter="{Binding .}"/>
                    </Grid.GestureRecognizers>
                    <Border
                      StrokeThickness="1"
                      StrokeShape="RoundRectangle 5"
                      Stroke="{StaticResource SecondaryBrush}">
                      <Label
                        Text="{Binding CraftableName}"
                        Style="{StaticResource SubHeadline}"/>
                    </Border>
                  </Grid>
                </DataTemplate>
              </CollectionView.ItemTemplate>
            </CollectionView>
          </Border>
        </ScrollView>

        <ScrollView
          Grid.Column="1">
          <Border
            Grid.Column="1"
            Padding="7">
            <Grid
              ColumnDefinitions="*, *, *, *, auto"
              RowDefinitions="auto, auto, *, auto"
              ColumnSpacing="10">
              <Label
                Text="{Binding SelectedCraftable.CraftableName}"
                Grid.Row="0"
                Grid.ColumnSpan="5"
                Style="{StaticResource Headline}"/>
              <HorizontalStackLayout
                Grid.Column="0"
                Grid.Row="1"
                Spacing="5">
                <Label
                Text="Logs:"/>
                <Label
                  Text="{Binding SelectedCraftable.LogsCost}"/>
              </HorizontalStackLayout>
              <HorizontalStackLayout
                Grid.Column="1"
                Grid.Row="1">
                <Label
                  Text="Sticks:"/>
                <Label
                  Text="{Binding SelectedCraftable.SticksCost}"/>
              </HorizontalStackLayout>
              <HorizontalStackLayout
                Grid.Column="2"
                Grid.Row="1">
                <Label
                  Text="Fibers:"/>
                <Label
                  Text="{Binding SelectedCraftable.FibersCost}"/>
              </HorizontalStackLayout>
              <HorizontalStackLayout
                Grid.Column="3"
                Grid.Row="1">
                <Label
                  Text="Stones:"/>
                <Label
                  Text="{Binding SelectedCraftable.StonesCost}"/>
              </HorizontalStackLayout>
              <HorizontalStackLayout
                Grid.Column="4"
                Grid.Row="1">
                <Label
                  Text="Food:"/>
                <Label
                  Text="{Binding SelectedCraftable.FoodCost}"/>
              </HorizontalStackLayout>

              <Label
                Text="{Binding SelectedCraftable.Description}"
                Grid.Row="2"
                Grid.ColumnSpan="5"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
              <Button
                Text="Craft"
                Grid.Row="3"
                Grid.ColumnSpan="5"
                IsEnabled="{Binding SelectedItemIsCraftable}"
                Command="{Binding CraftSelectedCraftableCommand}"/>
            </Grid>
          </Border>
        </ScrollView>
      </Grid>

      <Button
        Text="Back"
        Grid.Row="3"
        Command="{Binding GoToMainGameViewCommand}"/>
    </Grid>
  </ScrollView>
</ContentPage>