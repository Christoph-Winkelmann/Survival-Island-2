<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:survival_island_2.ViewModels"
             x:DataType="viewmodel:EndScreenViewModel"
             x:Class="survival_island_2.Views.EndScreenView"
             Title="{Binding Title}">

     <ScrollView>
          <VerticalStackLayout
               Margin="10"
               Spacing="20">
               <Label
                    Text="{Binding Title}"
                    Style="{StaticResource Headline}"/>
               <Label
                    Text="Placeholder Game Summary"
                    HorizontalOptions="Center"/>
               <Button
                    Text="Continue"
                    Command="{Binding GoToMainMenuViewCommand}"/>
          </VerticalStackLayout>
     </ScrollView>
</ContentPage>