<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:survival_island_2.ViewModels"
             x:DataType="viewmodel:MainGameViewModel"
             x:Class="survival_island_2.Views.MainGameView"
             Title="{Binding Title}">


  <ScrollView
    MaximumWidthRequest="640"
    VerticalScrollBarVisibility="Never">
    <Grid
    RowDefinitions="auto, auto, auto"
    RowSpacing="20">
      <!--<Label
      Text="{Binding CurrentIslandLocation.LocationName}"
      Style="{StaticResource Headline}"/>-->
      <Grid
        Grid.Row="0"
        ColumnDefinitions="*, *, *, *, auto"
        RowDefinitions="auto, auto">
        <Grid
          Grid.ColumnSpan="5"
          ColumnDefinitions="*, *, *, auto"
          RowDefinitions="auto">
          <HorizontalStackLayout
            Grid.Column="0"
            Grid.Row="0"
            Spacing="5">
            <Label
              Text="Player Name:"/>
            <Label
              Text="{Binding Player.PlayerName}"/>
          </HorizontalStackLayout>
          <HorizontalStackLayout
            Grid.Column="1"
            Grid.Row="0"
            Spacing="5">
            <Label
              Text="Profession:"/>
            <Label
              Text="{Binding Player.ProfessionName}"/>
          </HorizontalStackLayout>
          <HorizontalStackLayout
            Grid.Column="2"
            Grid.Row="0"
            Spacing="5">
            <Label
              Text="Location:"/>
            <Label
              Text="{Binding CurrentIslandLocation.LocationName}"/>
          </HorizontalStackLayout>
          <HorizontalStackLayout
            Grid.Column="3"
            Grid.Row="0"
            Spacing="5">
            <Label
              Text="Time of day:"/>
            <Label
              Text="+Binding"/>
          </HorizontalStackLayout>
        </Grid>

        <HorizontalStackLayout
          Grid.Column="0"
          Grid.Row="1"
          Spacing="10">
          <Label
            Text="Logs: "/>
          <Label
            Text="{Binding ResourcesInventory.LogsCount}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
          Grid.Column="1"
          Grid.Row="1"
          Spacing="5">
          <Label
            Text="Sticks: "/>
          <Label
            Text="{Binding ResourcesInventory.SticksCount}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
          Grid.Column="2"
          Grid.Row="1"
          Spacing="5">
          <Label
            Text="Fibers: "/>
          <Label
            Text="{Binding ResourcesInventory.FibersCount}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
          Grid.Column="3"
          Grid.Row="1"
          Spacing="5">
          <Label
            Text="Stones: "/>
          <Label
            Text="{Binding ResourcesInventory.StonesCount}"/>
        </HorizontalStackLayout>
        <HorizontalStackLayout
          Grid.Column="4"
          Grid.Row="1"
          Spacing="5">
          <Label
            Text="Food: "/>
          <Label
            Text="{Binding ResourcesInventory.FoodCount}"/>
        </HorizontalStackLayout>
      </Grid>
      <Image
        Source="{Binding CurrentIslandLocation.LocationArtPath}"
        Grid.Row="1"/>
      <Grid
        Grid.Row="2"
        RowDefinitions="auto, auto, auto, auto, auto, auto"
        RowSpacing="7">
        <Button
          Text="Look around"
          Grid.Row="0"
          Command="{Binding LookAroundPromptCommand}"/>
        <Button
          Text="Harvest Resources"
          Grid.Row="1"
          Command="{Binding HarvestPromptCommand}"/>
        <Button
          Text="Travel"
          Grid.Row="2"
          Command="{Binding TravelPromptCommand}"/>
        <Button
          Text="Craft"
          Grid.Row="3"
          Command="{Binding GoToCraftingViewCommand}"
          CommandParameter="{Binding CurrentIslandLocation}"/>
        <Button
          Text="Status"
          Grid.Row="4"
          Command="{Binding GoToStatusViewCommand}"/>
        <Button
          Text="Settings"
          Grid.Row="5"
          Command="{Binding GoToSettingsViewCommand}"/>
      </Grid>
    </Grid>
  </ScrollView>
</ContentPage>